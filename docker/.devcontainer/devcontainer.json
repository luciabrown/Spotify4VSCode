{
  "name": "Project Full Dev Container",
  "image": "luciafbrown/project-full:latest",
  "features": {
    "node": "20"
  },
 // "context": "../..",
  "workspaceFolder": "/app",
  "postStartCommand": "/app/project-full &",
  "remoteUser": "root",
  "extensions": [
    "ms-vscode.go",
    "ms-vscode.vscode-typescript-tslint-plugin"
  ],
  "mounts": [
  "source=${localEnv:.env},target=/app/.env,type=bind,consistency=cached"
],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/sh"
  }
  
} 